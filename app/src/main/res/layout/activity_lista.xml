<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lista">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lblCodigo0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codigo: " />

        <TextView
            android:id="@+id/lblCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lblCodigo0" />

        <TextView
            android:id="@+id/lblNombre0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblCodigo0"
            android:layout_marginTop="5dp"
            android:text="Nombre de Producto: " />

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblCodigo0"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/lblNombre0" />

        <TextView
            android:id="@+id/lblStock0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblNombre0"
            android:layout_marginTop="5dp"
            android:text="Stock: " />

        <TextView
            android:id="@+id/lblStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblNombre0"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/lblStock0" />


        <TextView
            android:id="@+id/lblVenta0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Precio de venta" />

        <TextView
            android:id="@+id/lblVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />


        <Button
            android:id="@+id/btnEliminarListener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblStock0"
            android:text="Eliminar Listener" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>